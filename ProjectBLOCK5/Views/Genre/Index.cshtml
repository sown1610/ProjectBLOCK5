@using ProjectBLOCK5;
@using ProjectBLOCK5.Models;
@model List<Genre>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        Apex Admin
    </title>
    <link rel="shortcut icon" href="/images/logo-mb.png" type="image/png">
    <!-- GOOGLE FONT -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <!-- BOXICONS -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <!-- APP CSS -->
    <link rel="stylesheet" href="/css/grid.css">
    <link rel="stylesheet" href="/css/app.css">
</head>

<body>

  
    <!-- END SIDEBAR -->

    <!-- MAIN CONTENT -->
    
       
        <div class="main-content">
            <div class="row">
               

            <div class="row">
                
                <div class="col-12">
                <form asp-controller="Genre" asp-action="Index" method="post">
                    <h3>Add a new genre</h3>
                    <br/>
                    <input required type="text" name="name" id="validate" name="validate" pattern="[A-Za-z].{6,}" placeholder="Trên 6 ký tự"/>
                    <input type="submit" value="Add"/>
                </form>
                </div>
                   <br/>
                 <br/>
                <div class="col-12">
                    <!-- ORDERS TABLE -->
                    <div class="box">
                        
                        <div class="box-body overflow-scroll">
                            <table>
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>       
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Genre genre in Model)
                                    {
                                        <tr>
                                        <td>@genre.GenreId</td>
                                         <td>@genre.Description</td>
                                         <td><a style="color: red;" onclick="return ConfirmDelete()" asp-controller="Genre" asp-action="Delete" asp-route-id="@genre.GenreId"> Delete </a></td>
                                    </tr>      
                                    }
                                  
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- END ORDERS TABLE -->
                </div>
                <div class="text-center" style="margin-bottom: 50px">
        <a asp-controller="Admin" asp-action="Index" ><button type="button" class="btn btn-primary text-center">Home</button></a>
    </div>
            </div>
        </div>
 
    <!-- END MAIN CONTENT -->

    <div class="overlay"></div>

    <!-- SCRIPT -->
    <!-- APEX CHART -->
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <!-- APP JS -->
    <script src="/js/app.js"></script>

</body>
<script type="text/javascript">
    function ConfirmDelete() {
        if (confirm("Do you want delete ?")) {
            return true;
        }
        return false;
    }
</script>
</html>